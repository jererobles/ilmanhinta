# Fingrid API
FINGRID_API_KEY=your_api_key_here

# FMI Settings
FMI_STATION_ID=101004  # Helsinki Kaisaniemi
FMI_BBOX=19.0,59.0,32.0,70.5  # Finland bounding box

# Application
LOG_LEVEL=INFO
CACHE_TTL_SECONDS=180  # 3 minutes for real-time data

# ML Model
MODEL_RETRAIN_HOURS=24
PREDICTION_HORIZON_HOURS=24

# API
API_HOST=0.0.0.0
API_PORT=8000

# Dagster
DAGSTER_HOME=/app/data/dagster_home

# Scheduler (API process only; Dagster handles schedules in production)
# Set to 'true' to run ingestion/retraining loops inside the API process (default: false)
ENABLE_IN_PROCESS_SCHEDULER=false
